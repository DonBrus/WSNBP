// this should be compiled in ARM mode, was tested only with ADS compiler
void DelayMs(uint32_t ms)
{
  volatile uint32_t i;
  while(ms--)
  {
    i = (uint32_t)(((24000000)/1000)/7); // 1000 us , 7 CPU cycles / loop
    while(i--);
  }
}

/***********************************************************************************/
// this should be compiled in ARM mode, was tested only with ADS compiler
void DelayUs(uint32_t us)
{
  volatile uint32_t i;
  while(us--)
  {
    i = (uint32_t)(((24000000)/1000)/7000); // 1 us , 7 CPU cycles / loop
    while(i--);
  }
}

